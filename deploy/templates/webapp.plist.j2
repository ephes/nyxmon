<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>{{ project_name }}.webapp</string>
    <key>ProgramArguments</key>
    <array>
        <string>{{ venv_bin }}/granian</string>
        <string>--workers</string>
        <string>{{ granian_number_of_workers }}</string>
        <string>--interface</string>
        <string>wsgi</string>
        <string>--host</string>
        <string>0.0.0.0</string>
        <string>--port</string>
        <string>{{ app_port }}</string>
        <string>--access-log</string>
        <string>config.wsgi</string>
    </array>
    <key>EnvironmentVariables</key>
    <dict>
        <key>DJANGO_SETTINGS_MODULE</key>
        <string>{{ django_settings_module }}</string>
    </dict>
    <key>WorkingDirectory</key>
    <string>{{ site_path }}</string>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardErrorPath</key>
    <string>{{ site_path }}/logs/webapp.err</string>
    <key>StandardOutPath</key>
    <string>{{ site_path }}/logs/webapp.log</string>
</dict>
</plist>